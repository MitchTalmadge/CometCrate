{
  "name": "server",
  "version": "1.0.0",
  "description": "CometCrate Essentials Server",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "nodemon --inspect ./src/server.ts",
    "dev:mem-mongo": "nodemon --inspect ./dev/init.ts",
    "build": "rimraf dist temp && tsc"
  },
  "nodemonConfig": {
    "delay": 1000,
    "watch": [
      "src",
      "dev"
    ],
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "ext": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CometCrate/Essentials.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/CometCrate/Essentials/issues"
  },
  "homepage": "https://github.com/CometCrate/Essentials#readme",
  "dependencies": {
    "apollo-server-express": "^2.9.14",
    "axios": "^0.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "graphql": "^14.5.8",
    "mongoose": "^5.11.7",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "^1.0.1",
    "@types/connect-mongo": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.16",
    "@types/mkdirp": "^1.0.0",
    "@types/mongodb": "^3.3.6",
    "@types/mongoose": "^5.5.20",
    "@types/node": "^13.1.0",
    "@types/passport": "^1.0.1",
    "@types/passport-oauth2": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mkdirp": "^1.0.0",
    "mongodb-memory-server": "^6.1.1",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "typescript": "~3.7.4"
  }
}
